<h1>Pairings</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Member 1</th>
            <th>Member 2</th>
            <th>Date</th>
            <th>Story</th>
        </tr>
    </thead>
    <tbody>
        <% @matrix.each do |pairing| %>
            <tr>
                <td><%= pairing[:id]%></td>
                <% if pairing[:member1] == pairing[:member2] %>
                    <td colspan="2"><%= pairing[:member1] %> (solo)</td>
                <%else%>
                    <td><%= pairing[:member1] %></td>
                    <td><%= pairing[:member2] %></td>
                <%end%>
                <td><%= pairing[:date] %></td>
                <% if pairing[:story] %>
                    <td><%= pairing[:story] %>
                    (<%= link_to 'edit',  edit_story_path(pairing[:story_id])%>, 
                    <%= link_to 'delete', story_path(pairing[:story_id]), method: 'DELETE', confirm: 'Yakin?' %>)
                    </td>
                <% else %>
                    <td><%= link_to 'Add Story', new_story_for_url(pairing[:id])%></td>
                <%end%>
            </tr>
        <% end %>
    </tbody>
</table>
            
<%= link_to 'New', new_pairing_path, { class: 'btn btn-primary', role: 'button' } %>
